{
  "version": "2.0.0",
  "title": "shop-opendays",
  "description": "Show shop opening hours and inform about next open day.",
  "dependencies": {
    "@netzstrategen/gulp-task-collection": "^1.1.1"
  },
  "gulpPaths": {
    "destDir": "./dist",
    "images": {
      "src": "./assets/imgs/**/*.{jpg,jpeg,png,gif,svg}",
      "dest": "./dist/imgs"
    },
    "scripts": {
      "src": "./assets/scripts/**/*.js",
      "dest": "./dist/js"
    },
    "styles": {
      "srcDir": "./assets/styles",
      "src": [
        "./assets/styles/**/*.scss"
      ],
      "dest": "./dist/styles"
    },
    "templates": "./templates/**/*.twig"
  }
}
